{
  "manifest_version": 3,
  "name": "IG Messenger Only",
  "version": "0.2.0",
  "description": "Blocks Instagram except for direct messages. Optional 5-minute unlock.",

  "action": {
    "default_title": "IG Messenger Only",
    "default_popup": "popup.html"
  },

  "permissions": ["declarativeNetRequest", "storage", "alarms"],

  "host_permissions": ["*://www.instagram.com/*", "*://i.instagram.com/*"],

  "background": { "service_worker": "background.js", "type": "module" },

  "declarative_net_request": {
    "rule_resources": [
      { "id": "lockRules", "enabled": true, "path": "rules.json" }
    ]
  },

  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*", "*://i.instagram.com/*"],
      "js": ["guard.js"],
      "run_at": "document_start"
    }
  ]
}