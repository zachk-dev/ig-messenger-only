{
  "manifest_version": 3,
  "name": "IG Messenger Only",
  "version": "0.2.1",
  "description": "Blocks Instagram except for direct messages. Optional 5-minute unlock.",

  "action": {
    "default_title": "IG Messenger Only",
    "default_popup": "popup.html"
  },

  "permissions": [
    "declarativeNetRequest",
    "alarms"
  ],

  "host_permissions": [
    "https://www.instagram.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "declarative_net_request": {
    "rule_resources": [
      { "id": "lockRules", "enabled": true, "path": "rules.json" }
    ]
  },

  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["guard.js"],
      "run_at": "document_start"
    }
  ]
}